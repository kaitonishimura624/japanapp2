<%= render partial: "header" %>
  <div class ="container">
    <div class ="col-md-12 margin-top-5per book-block">
      <div class = "padding-bottom-15">
        <%= form_for(@post) do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title , placeholder: 'type a title', class:'form-control' %>
          </div>
            <div class="form-group">
              <%= f.label :image do%>
                <i class="fas fa-camera"></i>
              <%= f.file_field :image %>
              <% end %>
            </div>
              <div class="form-group" >
                <%= f.text_area :body, placeholder: "text" , rows: "3", class:'form-control' %>
            </div>
          <%= f.submit "Edit", class: 'btn'%>
        <% end %>
      </div>
    </div>
  </div>
<%= render partial: "footer" %>