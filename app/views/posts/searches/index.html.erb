<%= render partial: "posts/header" %>
<div class ="search">
<%= form_with(url: posts_searches_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "Tokyo", class: "search-input" %>
  <%= form.submit "push", class: "search-btn" %>
</div>
<% end %>
<div class="container">
<div class="row">
<% @search.present? %>
<% @posts.each do |post| %>
    <%= render partial: "posts/post", locals: { post: post } %>
  <% end %>
</div>
<% else%>
  No results
</div>

<%= render partial: "posts/footer" %>

